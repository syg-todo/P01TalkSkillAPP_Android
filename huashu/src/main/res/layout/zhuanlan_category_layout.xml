<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="14dp"
    android:weightSum="4"
    android:background="@drawable/shape_home_funtion">
    <FrameLayout
        android:id="@+id/home_zhuanlan_class_fr_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/home_zhuanlan_class_iv_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ceshi"
            />
        <TextView
            android:id="@+id/home_zhuanlan_class_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="11sp"
            android:text="文章推荐1"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/home_zhuanlan_class_fr_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_zhuanlan_class_iv_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ceshi"
                />
            <TextView
                android:id="@+id/home_zhuanlan_class_tv_2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="11sp"
                android:text="文章推荐1"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/home_zhuanlan_class_fr_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_zhuanlan_class_iv_3"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ceshi"
                />
            <TextView
                android:id="@+id/home_zhuanlan_class_tv_3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="11sp"
                android:text="文章推荐1"/>
        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/home_zhuanlan_class_fr_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_zhuanlan_class_iv_4"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ceshi"
                />
            <TextView
                android:id="@+id/home_zhuanlan_class_tv_4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="11sp"
                android:text="文章推荐1"/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>