<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".zhuanlan.ui.ZhuanLanDetailActivity">

    <include
        layout="@layout/common_head_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/article_detail_rlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:clipToPadding="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:requiresFadingEdge="none"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:id="@+id/comment_input_top_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#B8B8B8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/comment_input_top_div"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/article_comment_et"
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"


                android:background="@drawable/shape_zhuanlan_search"
                android:hint="请输入评论内容"
                android:inputType="text"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#666666"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/article_comment_collect_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/uncollect" />


            <ImageView
                android:id="@+id/article_comment_share_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"

                android:src="@drawable/vector_share" />

            <LinearLayout
                android:id="@+id/get_miji_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="#FFB350"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/article_comment_wechat_iv"
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/wechat" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"

                    android:text="领取秘籍"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>