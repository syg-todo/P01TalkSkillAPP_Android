<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f3"
    tools:context=".MemberCenter.ui.ResetPhoneNumberActivity">
    <include layout="@layout/common_head_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"

            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="手机号码"
            />
        <EditText
            android:id="@+id/mobile_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:hint="请输入新的手机号码"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:background="@color/divider_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"

            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="验证码"
            />
        <TextView
            android:id="@+id/reset_pwd_send_sms_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:textColor="@color/colorAccent"
            android:text="发送验证码"
            android:background="@null"/>
        <EditText
            android:id="@+id/reset_pwd_yzcode_et"
            android:layout_toLeftOf="@id/reset_pwd_send_sms_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"

            android:layout_marginRight="14dp"

            android:hint="请输入验证码"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:background="@color/divider_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"

            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="密码"
            />
        <EditText
            android:id="@+id/reset_mobile_pwd_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:inputType="textPassword"
            android:hint="请输入登录密码"
            android:background="@null"/>
    </RelativeLayout>

    <Button
        android:id="@+id/reset_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="确认提交"
        android:background="@drawable/shape_user_btn"/>
</LinearLayout>