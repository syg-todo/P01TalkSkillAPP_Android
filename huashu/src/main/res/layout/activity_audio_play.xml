    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/iv_play_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/test" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/iv_audio_play_back"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:elevation="3dp"

            android:src="@drawable/vector_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_audio_play_share"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:elevation="3dp"
            android:src="@drawable/vector_share"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_audio_play_download"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:elevation="3dp"
            android:src="@drawable/vector_download"
            app:layout_constraintRight_toLeftOf="@id/iv_audio_play_share"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/fl_audio_play_controller"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/iv_audio_play_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/vector_play"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_audio_play_pause"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:src="@drawable/vector_pause" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_audio_play_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:text="/08:23"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_audio_play_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_audio_play_duration" />

        <SeekBar
            android:id="@+id/seekbar_audio_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/seekbar_shape"
            android:thumb="@drawable/seekbar_thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fl_audio_play_controller"
            app:layout_constraintRight_toLeftOf="@id/tv_audio_play_current" />

    </android.support.constraint.ConstraintLayout>

