<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog">

    <TextView
        android:id="@+id/tv_dialog_no_wifi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="当前无Wi-Fi,继续播放将使用流量"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_text_gray_solid_border"
        android:gravity="center"
        android:text="取消下载"
        android:layout_marginLeft="60dp"
        android:textColor="@color/white"
        android:id="@+id/btn_no_wifi_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_no_wifi" />

    <Button
        android:id="@+id/btn_no_wifi_continue"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_text_red_solid_border"
        android:text="继续下载"
        android:layout_marginRight="60dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_no_wifi" />

</android.support.constraint.ConstraintLayout>