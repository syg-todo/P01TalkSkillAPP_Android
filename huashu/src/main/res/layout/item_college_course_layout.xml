<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="163dp"
    android:layout_height="192dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_college_course">

    <com.tuodanhuashu.app.widget.RoundRectImageView
        android:id="@+id/img_course_image"
        android:layout_width="match_parent"
        app:radiusX1="8"
        app:radiusX2="8"
        android:layout_height="93dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="高情商进阶丨胡慎之的关系心理学课"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_course_image" />



        <TextView
            android:id="@+id/tv_course_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            android:text="许梦然"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_course_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥99.00"
            android:textColor="#fffe4c6c"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            />

</android.support.constraint.ConstraintLayout>