<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_home_funtion"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"
            android:weightSum="3">

            <FrameLayout
                android:id="@+id/home_function_fr_1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_home_function_acticle_1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_function_iv_1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/home_article_class_pic"
                         />

                    <TextView
                        android:id="@+id/home_function_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:text="晚会"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"

                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_function_fr_2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_home_function_acticle_2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/home_function_iv_2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/home_article_class_pic"
                         />

                    <TextView
                        android:id="@+id/home_function_tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"

                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_function_fr_3"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_home_function_acticle_3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/home_function_iv_3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/home_article_class_pic"
                        />

                    <TextView
                        android:id="@+id/home_function_tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"

                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/home_im_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/home_im_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_yuan_qinggan">

                    <ImageView

                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_home_qinggan" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/home_im_iv"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_im_up_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="情感分析"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="30分钟电话咨询"
                        android:layout_below="@id/home_im_up_tv"
                        android:textColor="#B8B8B8"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/shape_function_tag"
                        android:paddingLeft="3dp"
                        android:paddingTop="1.5dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="1.5dp"
                        android:text="免费"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="8sp" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_ask_teacher_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/home_ask_teacher_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_yuan_zixun">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_home_zixun" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/home_ask_teacher_iv"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_ask_teacher_up_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询导师"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_ask_teacher_up_tv"
                        android:layout_marginTop="2dp"
                        android:text="30分钟电话咨询"
                        android:textColor="#B8B8B8"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"

                        android:background="@drawable/shape_function_tag"
                        android:paddingLeft="3dp"
                        android:paddingTop="1.5dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="1.5dp"
                        android:text="一对一"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="8sp" />
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_home_search">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/sousuo" />

        <EditText
            android:id="@+id/home_frag_search_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp"
            android:background="@null"
            android:hint="输入妹子的问题获得最佳回复"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_frag_search_fr"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_home_search_btn">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="一键搜索"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="复制女生微信的话并搜索获取最佳回复"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果遇到紧急情感问题，请点"
            android:textColor="#ff7d7d7d" />

        <TextView
            android:id="@+id/home_jhjj_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江湖救急"
            android:textColor="#FF6666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系导师"
            android:textColor="#ff7d7d7d" />
    </LinearLayout>
</LinearLayout>