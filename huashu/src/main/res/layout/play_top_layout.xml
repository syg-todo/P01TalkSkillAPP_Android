<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <ImageView
        android:id="@+id/iv_play_iamge"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:elevation="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/test"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/common_head_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/vector_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_play_share"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="15dp"
        android:elevation="3dp"
        android:src="@drawable/vector_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_play_download"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="8dp"
        android:elevation="3dp"
        android:src="@drawable/vector_download"
        app:layout_constraintRight_toLeftOf="@id/iv_play_share"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekbar_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="12dp"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progressDrawable="@drawable/seekbar_shape"
        android:thumb="@drawable/seekbar_thumb"
        app:layout_constraintBottom_toBottomOf="@id/iv_play_iamge"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_play_controller"
        app:layout_constraintRight_toLeftOf="@id/tv_play_current" />

    <View
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#33000000"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_play_controller"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:elevation="3dp"
        android:padding="0dp"
        android:src="@drawable/play_controller"
        app:layout_constraintBottom_toBottomOf="@id/iv_play_iamge"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_play_duration"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:text="/08:23"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_play_iamge"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_play_current"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:text="08:23"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_play_iamge"
        app:layout_constraintRight_toLeftOf="@id/tv_play_duration" />


    <TextView
        android:id="@+id/tv_play_course_name"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:padding="@dimen/dp_10"
        android:text="施琪嘉创伤30讲：走出心理阴影，重塑强大30讲：走出心理阴影，重塑强大30讲：走出心理阴影，重塑强大内心"
        android:textColor="#ff000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_play_iamge" />

    <TextView
        android:id="@+id/tv_play_"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="本期内容"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_play_course_name"
        android:textStyle="bold"
        />


</android.support.constraint.ConstraintLayout>