<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_course_detail_recommend_course_name"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:text="施琪嘉创伤30讲：走出心理阴影，重塑强大内心"
        android:textColor="#ff000000"
        android:textSize="15sp"
        android:textStyle="bold"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_course_detail_recommend_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_course_detail_recommend_price"
        android:layout_width="33dp"
        android:layout_height="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="199"
        android:textColor="#ff999999"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_detail_recommend_course_name" />


    <TextView
        android:id="@+id/tv_course_detail_recommend_sale_price"

        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="￥99"
        android:textColor="#fffe4c6c"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_detail_recommend_price" />

    <TextView
        android:id="@+id/tv_course_detail_recommend_join"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="14dp"
        android:text="1949人参加"
        android:textColor="#ff000000"
        android:textSize="14sp"

        app:layout_constraintRight_toLeftOf="@id/img_course_detail_recommend_image"
        app:layout_constraintTop_toBottomOf="@id/tv_course_detail_recommend_course_name" />

    <com.tuodanhuashu.app.widget.RoundRectImageView
        android:id="@+id/img_course_detail_recommend_image"
        android:layout_width="163dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radiusX1="6"
        app:radiusX2="6"
        app:radiusY1="6"
        app:radiusY2="6" />
</android.support.constraint.ConstraintLayout>