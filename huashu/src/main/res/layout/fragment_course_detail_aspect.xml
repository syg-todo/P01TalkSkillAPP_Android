<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_color">

    <TextView
        android:id="@+id/asspect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="详情"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_course_detail_asspect_recommend"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"
        android:text="更多推荐"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asspect" />

    <TextView
        android:id="@+id/tv_course_detail_asspect_mroe"
        android:layout_width="26dp"
        android:layout_height="18dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="21dp"
        android:text="更多"
        android:textColor="#ffd1d1d1"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asspect" />

    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/rv_course_detail_asspect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_course_detail_asspect_recommend" />


</android.support.constraint.ConstraintLayout>