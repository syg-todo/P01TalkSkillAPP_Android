<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/tv_my_course_name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:maxLines="2"
        android:text="爱人先爱己，女性自爱力36堂心理提升课"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_my_course_image"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_my_course_price"
        android:layout_width="32dp"
        android:layout_height="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:text="￥99"
        android:textColor="#fffe4c6c"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_course_name" />

    <TextView
        android:id="@+id/tv_my_course_tag"
        android:layout_width="33dp"
        android:layout_height="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:text="听过的"
        android:textColor="#ff999999"
        android:textSize="11sp"
        app:layout_constraintRight_toLeftOf="@id/iv_my_course_image"
        app:layout_constraintTop_toBottomOf="@id/tv_my_course_name" />

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/iv_my_course_image"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siShape="@drawable/shape_rounded_rectangle" />
</android.support.constraint.ConstraintLayout>