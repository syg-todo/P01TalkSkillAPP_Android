<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <ImageView
            android:id="@+id/item_home_article_iv_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ceshi" />
        <TextView
            android:id="@+id/item_home_article_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_home_article_iv_1"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="2"
            android:text="潜在出轨指数评估"/>
        <TextView
            android:id="@+id/item_home_article_desc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_home_article_iv_1"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:textColor="#ffb0b0b0"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            android:visibility="gone"
            android:ellipsize="end"
            android:text="在你的感情关系中，存在哪些难以解决的问题呢？"/>
        <TextView
            android:id="@+id/item_home_article_cat_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_home_article_iv_1"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:textColor="#ffd1d1d1"
            android:textSize="12sp"
            android:text="栏目类别"/>
        <TextView
            android:id="@+id/item_home_article_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#ffd1d1d1"
            android:textSize="12sp"
            android:text="2019-1-12"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F7F7F7">

    </FrameLayout>
</LinearLayout>