<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_talk_skill_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:weightSum="5"
        android:layout_gravity="bottom">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="4"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_home_talkskill_search">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/sousuo"/>
        <EditText
            android:id="@+id/home_talkskill_search_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="请输入妹子说的话"
            android:background="@null"
            />
    </RelativeLayout>
     <Button
         android:id="@+id/home_talkskill_search_btn"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:layout_marginLeft="12dp"
         android:layout_weight="1"
         android:gravity="center"
         android:text="搜索"
         android:textColor="@color/white"
         android:textSize="16sp"

         android:background="@drawable/home_talkskill_search_btn"/>
    </LinearLayout>
</FrameLayout>