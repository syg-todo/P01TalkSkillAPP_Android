<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:text="推荐文章"
            android:textColor="#ff000000"
            android:textSize="14sp"/>
        <LinearLayout
            android:id="@+id/zhuanlan_keywords_switch_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right|center_vertical">
            <ImageView

                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/switch_pic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"

            android:text="换一换"
            android:textColor="#ffb3b3b3"
            android:textSize="11sp"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:weightSum="3"
        android:background="@drawable/shape_home_funtion">
        <LinearLayout
            android:id="@+id/zhuanlan_articel_rcmd_ll_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/zhuanlan_articel_rcmd_iv_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ceshi"
            />
        <TextView
            android:id="@+id/zhuanlan_articel_rcmd_tv_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:singleLine="true"
            android:text="文章推荐1"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/zhuanlan_articel_rcmd_ll_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/zhuanlan_articel_rcmd_iv_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ceshi"
                />
            <TextView
                android:id="@+id/zhuanlan_articel_rcmd_tv_2"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:singleLine="true"
                android:text="文章推荐2"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/zhuanlan_articel_rcmd_ll_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/zhuanlan_articel_rcmd_iv_3"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ceshi"
                />
            <TextView
                android:id="@+id/zhuanlan_articel_rcmd_tv_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:singleLine="true"
                android:text="文章推荐3"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>