<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:background="#FFFFFF"
   >

    <LinearLayout
        android:id="@+id/college_course_sorting"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/college_course_iv_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/college_course_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:gravity="center"
            android:singleLine="true"

            android:ellipsize="none"
            android:text="文章推荐1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/college_course_community"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="75dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/college_course_iv_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/community_class"
            />

        <TextView
            android:id="@+id/college_course_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="文章推荐1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/college_course_private"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="75dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/college_course_iv_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/college_course_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="文章推荐1" />

    </LinearLayout>
</LinearLayout>