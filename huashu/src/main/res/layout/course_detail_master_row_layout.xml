<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_course_detail_master"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     />

    <TextView
        android:id="@+id/tv_course_detail_course_master_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="施琪嘉"
        android:textColor="#ff000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_course_detail_master_tag"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_course_detail_master_tag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@id/img_course_detail_master"
        app:layout_constraintRight_toRightOf="@id/img_course_detail_master"
         />

    <TextView
        android:id="@+id/tv_course_detail_follow"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginRight="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="#ffff6969"
        android:clickable="true"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_text_red_hollow_border_clickable"/>
</android.support.constraint.ConstraintLayout>