<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <com.tuodanhuashu.app.widget.RoundRectImageView
        android:id="@+id/img_course_detail_master"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radiusX1="20.0"
        app:radiusX2="20.0"
        app:radiusY1="20.0"
        app:radiusY2="20.0" />

    <com.tuodanhuashu.app.widget.RoundRectImageView
        android:id="@+id/img_course_detail_master_tag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@id/img_course_detail_master"
        app:layout_constraintRight_toRightOf="@id/img_course_detail_master"
        app:radiusX1="7.5"
        app:radiusX2="7.5"
        app:radiusY1="7.5"
        app:radiusY2="7.5" />

    <TextView
        android:id="@+id/tv_course_detail_follow"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginRight="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="#ffff6969"
        android:clickable="true"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_text_red_hollow_border_clickable"/>
</android.support.constraint.ConstraintLayout>