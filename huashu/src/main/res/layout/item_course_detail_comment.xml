<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    android:paddingBottom="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_course_detail_comment_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     />


    <TextView
        android:id="@+id/tv_item_course_detail_comment_commenter_name"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:text="悠然自得"
        android:textColor="#ff999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/iv_item_course_detail_comment_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_course_detail_comment_thumb_up"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/comment_thumb_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_course_detail_comment_commenter_like_count"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="5dp"
        android:text="18"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@id/iv_item_course_detail_comment_thumb_up"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_course_detail_comment_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:text="看过周梵老师很多文章，看过周梵老师很多文章，看过周梵老师很多文章，看过周梵老师很多文章，看过周梵老师很多文章，看过周梵老师很多文章。"
        android:textColor="#ff000000"
        android:textSize="13sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_item_course_detail_comment_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_item_course_detail_comment_commenter_name" />

    <TextView
        android:id="@+id/tv_item_course_detail_comment_time"
        android:layout_width="57dp"
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="2019-03-27"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/iv_item_course_detail_comment_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_item_course_detail_comment_comment" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_item_course_detail_reply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="18dp"
        android:background="#fff4f4f4"
        android:minHeight="86dp"
        android:paddingBottom="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_item_course_detail_comment_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_course_detail_comment_time">

        <TextView
            android:id="@+id/tv_item_course_detail_comment_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="鲸鱼探长"
            android:textColor="#ff999999"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="33dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="回复："
            android:textColor="#ff999999"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@id/tv_item_course_detail_comment_reply_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_course_detail_comment_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="小仙女，课程每周一、三、五更新哦，第6节在路上啦"
            android:textColor="#ff000000"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_course_detail_comment_reply_name"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteY="35dp" />

        <TextView
            android:id="@+id/tv_item_course_detail_comment_reply_time"
            android:layout_width="57dp"
            android:layout_height="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2019-03-27"
            android:textColor="#ff999999"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_course_detail_comment_reply_content" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>