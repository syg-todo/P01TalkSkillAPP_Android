<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_selected="false">
        <shape>
            <solid android:color="#ffffffff" />
            <stroke android:width="1dp" android:color="#ffffe3e3" />
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" />

        </shape>
    </item>
    <item android:state_selected="true">

        <shape>
            <solid android:color="#ffffe3e3" />
            <stroke android:width="1dp" android:color="#ffff6666" />
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" />

        </shape>
    </item>

</selector>