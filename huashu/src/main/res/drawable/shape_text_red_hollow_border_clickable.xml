<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="false"

        >
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <stroke android:width="1dp" android:color="#ffff6969" />
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp" android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" />
        </shape>
    </item>

    <item
        android:state_selected="true"
        >

        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <stroke android:width="1dp" android:color="#ffbfbfbf" />
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp" android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" />
        </shape>
    </item>
</selector>